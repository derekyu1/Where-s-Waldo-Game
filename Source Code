        private void stopbutton_Click(object sender, EventArgs e)
        {
            timeLeft = 0;
        }

        private void button35_Click(object sender, EventArgs e)
        {
            if (timeLeft == 1)
            {
                button35.BackgroundImage = Image.FromFile(@"C:\Users\derek.yu\Documents\waldo.jpg");
                buttonwasclicked = true;
                turntoblack = true;
            }
        }

        private void label1_Click(object sender, EventArgs e)
        {

        }

        private void timer2_Tick(object sender, EventArgs e)
        {
            if (buttonwasclicked)
            {
                timer2.Stop();
                MessageBox.Show("You found Waldo! Congratulations. You are a Winner!");
                startbutton.Enabled = true;
            }

            else if (timeLeftReal > 0)
            {
                timeLeftReal--;
                label1.Text = timeLeftReal + " " + "seconds";
            }

            else
            {
                timer2.Stop();
                turntoblack = true;
                button35.BackgroundImage = Image.FromFile(@"C:\Users\derek.yu\Documents\waldo.jpg");
                label1.Text = "Time's Up!";
                MessageBox.Show("You didn't find Waldo. He found you", "You suck!");
                startbutton.Enabled = true;
              
                
            }
        }


